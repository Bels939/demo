<odoo>
        <record id="hr_hospital_library_patient_list" model="ir.ui.view">
            <field name="name">hr.hospital.library.patient.list</field>
            <field name="model">hr.hospital.library.patient</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="diseases_id"/>
                    <field name="adress"/>
                    <field name="age"/>
                    <field name="comment"/>
                </list>
            </field>
        </record>

        <record id="hr_hospital_library_patient_form" model="ir.ui.view">
            <field name="name">hr.hospital.library.patient.form ()</field>
            <field name="model">hr.hospital.library.patient</field>
            <field name="arch" type="xml">
                <form>
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="adress"/>
                                <field name="age"/>
                                <field name="comment"/>
                            </group>
                            <group>
                                <field name="diseases_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_hr_hospital_library_patient_window" model="ir.actions.act_window">
            <field name="name">Patient</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.library.patient</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_hospital_library_menu_patient"
                  action="action_hr_hospital_library_patient_window"
                  parent="hr_hospital_library_menu_catalog"
                  name="Patient" sequence="300"/>

</odoo>